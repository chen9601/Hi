<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E0FFD9"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="40dp"
            android:textSize="30dp"
            android:textColor="#1A7913"
            android:fontFamily="@font/ha"
            android:text="Learn_Emo"/>

        <Button
            android:id="@+id/pass"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/ic_arrow_forward_black_24dp"
            android:backgroundTint="#801A7913"
            android:layout_x="300dp"
            android:layout_y="39dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_x="35dp"
            android:layout_y="140dp"
            android:src="@drawable/bb"
            android:id="@+id/imageview"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/say"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="175dp"
            android:layout_y="600dp"
            android:background="@drawable/ic_keyboard_voice_black_24dp"
            android:layout_gravity="center"
            android:backgroundTint="#801A7913"
            />

    </AbsoluteLayout>
</FrameLayout>
